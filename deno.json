{
    "name": "@esroyo/deno-simple-fetch",
    "version": "0.1.5",
    "exports": "./mod.ts",
    "tasks": {
        "bench": "deno bench -A",
        "bump": "git tag bump && git push origin bump && git tag -d bump",
        "dev": "deno test --watch",
        "coverage": "deno task test --clean --reporter=dot --coverage=coverage && deno coverage --lcov --output=coverage.lcov --exclude='src/test-utils.ts|vendor' coverage && genhtml -o coverage/report coverage.lcov",
        "fmt": "deno fmt src/",
        "test": "deno test -A --parallel --v8-flags=\"--expose-gc\""
    },
    "fmt": {
        "indentWidth": 4,
        "singleQuote": true
    },
    "license": "MIT",
    "imports": {
        "@std/assert": "jsr:@std/assert@1.0.6",
        "@std/testing": "jsr:@std/testing@1.0.4",
        "generic-pool": "jsr:@esroyo/generic-pool@3.10.4"
    },
    "lint": {
        "rules": {
            "exclude": ["require-await"]
        }
    },
    "publish": {
        "exclude": [
            "**/*_test.ts",
            "**/*.test.ts",
            "**/test_*.ts",
            "**/*_bench.ts",
            "**/*.bench.ts",
            "**/*.snap",
            ".github/",
            "coverage/",
            "testdata/",
            "*.lcov",
            ".*"
        ]
    }
}
